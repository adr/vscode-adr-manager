{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ESNext",
		"lib": ["ES2020", "dom"],
		"sourceMap": true,
		"rootDirs": ["src", "web"],
		"strict": true,
		"skipLibCheck": true,
		"allowJs": true,
		"outDir": "./dist"
	},
	"exclude": ["node_modules", "dist", "dist-web", "src/**/*.js"]
}
